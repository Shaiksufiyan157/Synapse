<%-layout("layout/boilerplate.ejs")%>

    <section class="py-5">
        <div class="container">
            <!-- Header -->
            <div class="row mb-5">
                <div class="col-12">
                    <h1 class="display-4 fw-bold text-center mb-4">SUBJECT NOTES</h1>
                </div>
            </div>

            <!-- Info Cards -->
            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="card border-primary h-100">
                        <div class="card-body d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-info-circle fa-2x text-primary"></i>
                            </div>
                            <div>
                                <p class="card-text text-primary mb-0 fs-5">
                                    The below notes/pyq are shared by the students
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-success h-100">
                        <div class="card-body d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-plus-circle fa-2x text-success"></i>
                                </div>
                                <div>
                                    <p class="card-text text-success mb-0 fs-5">
                                        To become a contributor please click the below button
                                    </p>
                                </div>
                            </div>
                            <div class="ms-3">
                                <a href="/addnotes"> <button class="btn btn-outline-success">
                                        <i class="fas fa-upload me-2"></i>Contribute
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



                <% if(!notes || notes.length === 0) { %>
    <div class="col-12">
        <div class="card border-0 text-center py-5">
            <div class="card-body">
                <div class="mb-4 text-muted opacity-50">
                    <i class="fas fa-folder-open fa-4x"></i>
                </div>
                
                <h3 class="h4 fw-bold text-secondary">No Notes Found</h3>
                <p class="text-muted col-md-8 mx-auto">
                    It looks like there aren't any notes in this category yet. 
                    Be the first one to help your classmates!
                </p>
                
                <div class="mt-4">
                    <a href="/addnotes" class="btn btn-primary px-4 py-2 rounded-pill">
                        <i class="fas fa-plus-circle me-2"></i>Contribute Notes
                    </a>
                </div>
            </div>
        </div>
    </div>
<% } %>
            <!-- Subject Notes Cards -->
            <div class="row g-4">
<% for(let note of notes){ %>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-book me-2"></i><%=note.subject %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-code me-2"></i>Subject Details
                                </h6>
                                <p class="mb-1"><strong>Subject Code:</strong><%=note.subcode %></p>
                                <p class="mb-1"><strong>Semester:</strong><%=note.semester %></p>
                                <p class="mb-0"><strong>Module:</strong><%=note.module %></p>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                           <a href="<%=note.pdf.url %>" target="_blank"> <button class="btn btn-primary w-100">
                                <i class="fas fa-download me-2"></i>Download
                            </button></a>
                        </div>
                    </div>
                </div>
<% } %>
            </div>

        </div>
    </section>














