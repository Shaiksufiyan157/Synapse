    <section class="py-5">
        <div class="container">
            <!-- Header -->
            <div class="row mb-5">
                <div class="col-12">
                    <h1 class="display-4 fw-bold text-center mb-4">Previous Year Question Papers</h1>
                </div>
            </div>

            <!-- Info Cards -->
            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="card border-primary h-100">
                        <div class="card-body d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-info-circle fa-2x text-primary"></i>
                            </div>
                            <div>
                                <p class="card-text text-primary mb-0 fs-5">
                                    The below notes/pyq are shared by the students
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-success h-100">
                        <div class="card-body d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-plus-circle fa-2x text-success"></i>
                                </div>
                                <div>
                                    <p class="card-text text-success mb-0 fs-5">
                                        To become a contributor please click the below button
                                    </p>
                                </div>
                            </div>
                            <div class="ms-3">
                                <a href="/addpyqs"> <button class="btn btn-outline-success">
                                        <i class="fas fa-upload me-2"></i>Contribute
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subject Notes Cards -->
            <div class="row g-4">
                <% for(let pyq of pyqs){ %>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-book me-2"></i>
                                    <%=pyq.subject %>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-code me-2"></i>Subject Details
                                    </h6>
                                    <p class="mb-1"><strong>Subject Code:</strong>
                                        <%=pyq.subcode %>
                                    </p>
                                    <p class="mb-1"><strong>Semester:</strong>
                                        <%=pyq.semester %>
                                    </p>
                                    <p class="mb-0"><strong>Year:</strong>
                                        <%=pyq.year%>
                                    </p>
                                </div>
                            </div>
                            <div class="card-footer bg-light">
                                <a href="<%=pyq.pdf.url %>" target="_blank"> <button class="btn btn-primary w-100">
                                        <i class="fas fa-download me-2"></i>Download
                                    </button></a>
                            </div>
                        </div>
                    </div>
                    <% } %>

