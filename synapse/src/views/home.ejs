<%-layout('layout/boilerplate.ejs')%>

  <section class=" py-5">
  <div class="container">
    <div class="text-center bg-white p-4 p-md-5 rounded-3 shadow-lg">
      
      <!-- Main Branding -->
      <h1 class="display-3 fw-bold text-primary">Synapse</h1>
      <p class="fs-5 text-muted mb-5">Access, share, and contribute academic resources easily.</p>
      
      <!-- Call to Action Section -->
      <h2 class="fw-light mb-4">What would you like to do?</h2>
      
      <!-- 
        Using a row/col layout is more flexible and attractive than a single d-grid.
        This creates a 2-column layout on medium screens and up.
      -->
      <div class="row g-3 justify-content-center">

        <!-- Search PYQs -->
        <div class="col-md-6 col-lg-5">
          <a href="/pyqs" class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center p-3">
            <i class="bi bi-search me-2"></i>
            Search Previous Year Papers
          </a>
        </div>

        <!-- View Notes -->
        <div class="col-md-6 col-lg-5">
          <a href="/notes" class="btn btn-success btn-lg w-100 d-flex align-items-center justify-content-center p-3">
            <i class="bi bi-book me-2"></i>
            View Notes
          </a>
        </div>

        <!-- Contribute Notes -->
        <div class="col-md-6 col-lg-5">
          <a href="/addnotes" class="btn btn-outline-primary btn-lg w-100 d-flex align-items-center justify-content-center p-3">
            <i class="bi bi-pencil-square me-2"></i>
            Contribute Notes
          </a>
        </div>

        <!-- Contribute PYQ -->
        <div class="col-md-6 col-lg-5">
          <a href="/addpyqs" class="btn btn-outline-success btn-lg w-100 d-flex align-items-center justify-content-center p-3">
            <i class="bi bi-upload me-2"></i>
            Contribute PYQ
          </a>
        </div>
        
      </div>
    </div>
  </div>
</section>


 